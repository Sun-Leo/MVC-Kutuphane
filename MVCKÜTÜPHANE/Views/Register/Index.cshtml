
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        Üye Olma Formu
    </title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/Template/colorlib-regform-8/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/Template/colorlib-regform-8/css/style.css">
</head>
<body>

    <div class="main">

        <section class="signup">
            <!-- <img src="images/signup-bg.jpg" alt=""> -->
            <div class="container">
                <div class="signup-content">
                    <form method="POST" id="signup-form" class="signup-form">
                        <h2 class="form-title">Hesap Oluştur</h2>
                        <div class="form-group">
                            <input type="text" class="form-input" name="AD" id="AD" placeholder="Adınız" />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input" name="SOYAD" id="SOYAD" placeholder="Soyadınız" />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input" name="TELEFON" id="TELEFON" placeholder="Telefon Numaranız" />
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-input" name="MAİL" id="MAİL" placeholder="Email Adresiniz" />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input" name="ŞİFRE" id="ŞİFRE" placeholder="Şifre" />
                            <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" id="submit" class="form-submit" value="Üye Ol" />
                        </div>
                    </form>
                    <p class="loginhere">
                        Zaten Bir Hesabınız Var mı? <a href="/Login/Index/" class="loginhere-link">Giriş Yap</a>
                    </p>
                </div>
            </div>
        </section>

    </div>

    <!-- JS -->
    <script src="~/Template/colorlib-regform-8/vendor/jquery/jquery.min.js"></script>
    <script src="~/Template/colorlib-regform-8/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
